<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View  android:layout_height="10px"
        android:id="@+id/ge_frist"
        android:layout_width="match_parent"
        android:background="#82b686"
        />

<RelativeLayout
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_below="@+id/ge_frist"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/duan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:text="阶段1"
        ></TextView>

    <TextView
        android:id="@+id/duan_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="点击设置时间长度"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"></TextView>


    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:text="0h/天"></TextView>

    <ImageView
        android:id="@+id/every"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/everyday"></ImageView>

    <ListView
        android:id="@+id/evert_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/every"
        android:layout_alignTop="@+id/every"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="0dp"
        ></ListView>


    <View  android:layout_height="4px"
        android:id="@+id/xian2"
        android:layout_width="wrap_content"
        android:layout_alignLeft="@+id/every"
        android:layout_marginLeft="100dp"
        android:background="#82b686"
        android:layout_alignBottom="@+id/evert_listview"
        />

    <ImageView
        android:id="@+id/everyday_jia"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/evert_listview"
        android:layout_alignBottom="@+id/evert_listview"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="-50dp"
        android:src="@drawable/jia"></ImageView>


    <ImageView
        android:id="@+id/everyday_jian"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/everyday_jia"
        android:layout_alignBottom="@+id/everyday_jia"
        android:layout_marginLeft="40dp"
        android:src="@drawable/jian"></ImageView>

    <ImageView
        android:id="@+id/dingyi"
        android:layout_width="95dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_alignBottom="@+id/everyday_jia"
        android:layout_marginBottom="-50dp"
        android:src="@drawable/dingyi">
    </ImageView>

    <ListView
        android:id="@+id/ziding_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dingyi"
        android:layout_alignTop="@+id/dingyi"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="5dp"
        ></ListView>

    <View  android:layout_height="4px"
        android:id="@+id/xian3"
        android:layout_width="wrap_content"
        android:layout_alignLeft="@+id/every"
        android:layout_marginLeft="100dp"
        android:background="#82b686"
        android:layout_alignBottom="@+id/ziding_listview"
        />

    <ImageView
        android:id="@+id/ziding_jia"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/ziding_listview"
        android:layout_alignBottom="@+id/ziding_listview"
        android:layout_marginLeft="105dp"
        android:layout_marginBottom="-50dp"
        android:src="@drawable/jia"></ImageView>


    <ImageView
        android:id="@+id/ziding_jian"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/ziding_jia"
        android:layout_alignBottom="@+id/ziding_jia"
        android:layout_marginLeft="40dp"
        android:src="@drawable/jian"></ImageView>
</RelativeLayout>
    <View  android:layout_height="10px"
        android:id="@+id/ge_last"
        android:layout_width="match_parent"
        android:layout_below="@+id/main"
        android:background="#82b686"
        />
</RelativeLayout>
