<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ScheduleFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:id="@+id/left_button_schedule"
                android:src="@drawable/ic_chevron_left_black_40dp"/>
            <TextView
                android:id="@+id/date_schedule_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020-03"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:id="@+id/right_button_schedule"
                android:src="@drawable/ic_chevron_right_black_40dp"/>
        </FrameLayout>
        <!-- TODO: Update blank fragment layout -->
        <androidx.recyclerview.widget.RecyclerView
            android:layout_weight="11"
            android:id="@+id/recyclerView_schedule"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

    </LinearLayout>


</FrameLayout>